#:kivy 1.9.0
#:import datetime datetime

# <CustButton@Button>:
#     font_size: 20

<BaseGui>:    
    id:base 
    rows: 3

    
    spacing: 10
    padding: 10
    
    #top Row: has the menu button date and time
    BoxLayout:
        AnchorLayout:
            anchor_x: 'left'
            anchor_y: 'top'
            Button:
                size_hint_x: None
                width: 30
                size_hint_y: None
                height: 30
                Image:
                    source: 'sliderMenuButton.png'
                    center_y: self.parent.center_y
                    center_x: self.parent.center_x
                    size: self.parent.width, self.parent.height
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'    
            Label:
                text: str(datetime.datetime.now())
                font_size: 20
                font:
        Label:
            text: "time"
            font_size: 10
    BoxLayout:
        TextInput:
            id: todoList
            font_size: 14
            multiline: True

        


    
    